{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "outDir": ".output",
     "module": "ESNext",  // Use "ESNext" for ESM modules
     "target": "ESNext",
     "moduleResolution": "Node",
     "esModuleInterop": true,
     "skipLibCheck": true,
     "verbatimModuleSyntax": false, // Remove or set to false
     "strict": true
  }
}
